<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Role</th>
    <th>Team</th>
    <th colspan="3"></th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.team.name %></td>
      <td><%= link_to 'Show Graphs', role %></td>
      <td><%= link_to 'Edit', edit_role_path(role) %></td>
      <td><%= link_to 'Delete', role, method: :delete, data: {confirm: 'Delete?'} %></td>
    </tr>
  <% end %>
</table>

<%= column_chart @total_wins_by_role %>

<%= link_to 'Add', new_role_path %>